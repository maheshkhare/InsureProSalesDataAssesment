@page "/sales-dashboard"
@inject InsureProSalesDataAssesment.Services.SalesAnalysisService SalesService
@inject InsureProSalesDataAssesment.Services.DataParserService dataParserService

<PageTitle>Sales Dashboard</PageTitle>

<h1 class="text-center mb-4">Sales Dashboard</h1>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4>Total Sales: @TotalSales.ToString("C")</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <h5>Month-Wise Sales</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>Sales Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in MonthWiseSales)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h5>Most Popular Items</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>Most Popular Item</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in PopularItems)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <h5>Top Revenue Items</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>Top Revenue Item</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in TopRevenueItems)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h5>Min, Max, and Average Orders</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>Min</th>
                        <th>Max</th>
                        <th>Avg</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in MinMaxAvgOrders)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value.Min</td>
                            <td>@item.Value.Max</td>
                            <td>@item.Value.Avg.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private decimal TotalSales { get; set; }
    private Dictionary<string, decimal> MonthWiseSales = new();
    private Dictionary<string, string> PopularItems = new();
    private Dictionary<string, string> TopRevenueItems = new();
    private Dictionary<string, (int Min, int Max, double Avg)> MinMaxAvgOrders = new();

    protected override void OnInitialized()
    {
        var salesRecords = dataParserService.ParseSalesData();
        TotalSales = SalesService.GetTotalSales(salesRecords);
        MonthWiseSales = SalesService.GetMonthWiseSales(salesRecords);
        PopularItems = SalesService.GetMostPopularItems(salesRecords);
        TopRevenueItems = SalesService.GetTopRevenueItems(salesRecords);
        MinMaxAvgOrders = SalesService.GetMinMaxAvgOrdersForPopularItem(salesRecords);
    }
}
